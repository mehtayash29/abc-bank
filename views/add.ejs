<%- include('header') %>
    <div class="container">
        <main>
            <h2>Add new customer</h2>
            <hr class="my-4">
            <h4 class="mb-3">Information</h4>
            <form class="needs-validation" action="/add" method="post">
                <div class="row">
                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" name="fname" required="">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="" name="lname" required="">
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="number" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="Number" placeholder="+1234567890" name="num" required="">
                        <div class="invalid-feedback">
                            Valid Number is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com" name="mail">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="addr" required="">
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label for="zip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="zip" placeholder="" name="zip" required="">
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>

                    <div class="col-12">
                        <hr class="my-4">
                        <label for="username" class="form-label">Account Number</label>
                        <div class="input-group has-validation">
                            <input type="text" class="form-control" id="username" placeholder="Account Number" name="accnum" required="">
                            <div class="invalid-feedback">
                                Account number is required.
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">Branch</label>
                        <input type="text" class="form-control" id="address" placeholder="Branch" name="branch" required="">
                        <div class="invalid-feedback">
                            Please enter your Branch Name.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="rs" class="form-label">Current Balance</label>
                        <input type="text" class="form-control" id="address" placeholder="In rupees" name="balance" required="">
                        <div class="invalid-feedback">
                            Please enter your Current Balance.
                        </div>
                    </div>
                </div>
                <hr class="my-4">

                <button class="w-100 btn btn-dark btn-lg" type="submit">ADD</button>
            </form>
        </main>
    </div>

    <%- include('footer') %>